<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %} | Oishikatta </title>
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet">
        {% if app.environment == 'dev' %}
            <link rel="stylesheet" type="text/css" href="{{ asset('dist/main.css') }}"  />
        {% endif %}
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="{% block body_class %}{% endblock %}">
        <header>
            <div class="container">
                <a id="logo" href="{{ path('homepage') }}"></a>
                <nav>
                    <ul>
                        <li><a href="{{ path('recipe_home') }}">Latest Recipes</a></li>
                        <li><a href="{{ path('recipe_add') }}">Add New</a></li>
                        <li><a href="#">Find by </a></li>
                    </ul>
                </nav>
            </div>
        </header>
        {% block body %}{% endblock %}
        <footer>

        </footer>

        <script src="https://unpkg.com/vue"></script>
        <script src="{{ asset('dist/bundle.js') }}" ></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
