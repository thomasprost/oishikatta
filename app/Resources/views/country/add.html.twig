{% extends 'base.html.twig' %}

{% block body %}
    <div id="app">
        <h1>Add a country</h1>
        <div class="container">
            {{ form_start(form, {'attr': {'class': 'flex-container'}}) }}
            <div class="half-width">
                {{ form_row(form.name) }}
                {{ form_row(form.nameJa) }}
                {{ form_row(form.imageFile) }}
                {{ form_row(form.flagImageFile) }}
                {{ form_widget(form.save) }}

            </div>


            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}